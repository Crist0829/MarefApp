<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="botones_slice">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">21dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">@color/naranja</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="botones_int">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/azul</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>

    <style name="Splash" parent="@style/Theme.AppCompat.DayNight.NoActionBar">

        <item name="android:windowBackground">@drawable/splash</item>

    </style>

    <style name="titulos">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/gris</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginBottom">16sp</item>
        <item name="android:background">#C2BC89</item>
        <item name="android:padding">@dimen/padding</item>


    </style>

    <style name="textoContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margen</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/gris</item>
        <item name="android:textSize">16sp</item>
    </style>


</resources>