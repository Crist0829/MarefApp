<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    tools:context=".Cronometro">


    <Button
        android:id="@+id/backButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/baseline_arrow_back_black_18dp"
        android:backgroundTint="@color/naranja"
        android:contentDescription="@string/backButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/beige"
        android:contentDescription="@string/logo"
        android:padding="@dimen/margen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_logo" />


    <TextView
        android:id="@+id/titulo"
        style="@style/titulos"
        android:text="VOLUMEN DEL POZO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.398"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <ScrollView
        android:id="@+id/Scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo"
        app:layout_constraintVertical_bias="0.97">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/gris_claro"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margen"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/paddingMedio">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/margenMedio"
                    android:text="DiÃ¡metro del pozo: "
                    android:textColor="@color/naranja"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margenMedio"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/diametroPozoM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margen"
                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:ems="6"
                        android:hint="mm"
                        android:inputType="numberDecimal"
                        android:textColor="@color/naranja"
                        android:textColorHighlight="@color/black"
                        android:textColorHint="@color/gris"
                        android:textColorLink="@color/black"
                        android:textCursorDrawable="@color/black" />

                    <EditText
                        android:id="@+id/diametroPozoI"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margen"
                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:ems="6"
                        android:hint="pul"
                        android:inputType="numberDecimal"
                        android:textColor="@color/naranja"
                        android:textColorHighlight="@color/black"
                        android:textColorHint="@color/gris"
                        android:textColorLink="@color/black"
                        android:textCursorDrawable="@color/black" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/margenMedio"
                    android:text="Longitud del pozo: "
                    android:textColor="@color/naranja"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margenMedio"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/longitudM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margen"
                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:ems="6"
                        android:hint="m"
                        android:inputType="numberDecimal"
                        android:textColor="@color/naranja"
                        android:textColorHighlight="@color/black"
                        android:textColorHint="@color/gris"
                        android:textColorLink="@color/black"
                        android:textCursorDrawable="@color/black" />

                    <EditText
                        android:id="@+id/longitudI"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margen"
                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:ems="6"
                        android:hint="pie"
                        android:inputType="numberDecimal"
                        android:textColor="@color/naranja"
                        android:textColorHighlight="@color/black"
                        android:textColorHint="@color/gris"
                        android:textColorLink="@color/black"
                        android:textCursorDrawable="@color/black" />

                </LinearLayout>


            </LinearLayout>


            <Button
                android:id="@+id/calcular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margen"
                android:background="@color/white"
                android:padding="@dimen/padding"
                android:text="@string/calcular"
                android:textColor="@color/black" />


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margen"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/paddingMedio">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/margen"
                    android:layout_marginTop="@dimen/margen"
                    android:fontFamily="@font/roboto_black"
                    android:gravity="center"
                    android:text="RESULTADOS:"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margen"
                        android:fontFamily="@font/roboto_medium"
                        android:text="CAPACIDAD DEL POZO: "
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margen"
                            android:layout_marginRight="0dp"
                            android:layout_marginBottom="4dp"
                            android:fontFamily="@font/roboto"
                            android:text="MÃTRICO:"
                            android:textColor="@color/black"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/capacidadPozoM"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margen"
                            android:layout_marginLeft="0dp"
                            android:text=""
                            android:textColor="@color/naranja"
                            android:visibility="visible" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margen"
                            android:fontFamily="@font/roboto"
                            android:text="IMPERIAL:"
                            android:textColor="@color/black"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/capacidadPozoImp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margen"
                            android:layout_marginLeft="0dp"
                            android:text=""
                            android:textColor="@color/naranja"
                            android:visibility="visible" />

                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margen"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/roboto_medium"
                        android:text="VOLUMEN POZO:"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margen"
                            android:layout_marginRight="0dp"
                            android:layout_marginBottom="4dp"
                            android:fontFamily="@font/roboto"
                            android:text="MÃTRICO:"
                            android:textColor="@color/black"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/volumenPozoM"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margen"
                            android:text=""
                            android:textColor="@color/naranja"
                            android:visibility="visible" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margen"
                            android:fontFamily="@font/roboto"
                            android:text="IMPERIAL:"
                            android:textColor="@color/black"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/volumenPozoImp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margen"
                            android:layout_marginLeft="0dp"
                            android:text=""
                            android:textColor="@color/naranja"
                            android:visibility="visible" />


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/subfondo"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Scroll"
        app:layout_constraintVertical_bias="1.0"></LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>